{
    "name": "svelte-app",
    "version": "1.0.0",
    "scripts": {
        "format": "prettier 'src/**/*.js' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "build": "rollup -c",
        "autobuild": "rollup -c -w",
        "dev": "run-p start:dev autobuild",
        "start": "sirv public",
        "start:dev": "sirv public --dev"
    },
    "dependencies": {
        "chroma-js": "^2.0.3",
        "d3": "^5.9.2",
        "eslint-plugin-svelte3": "^1.2.3",
        "prettier-plugin-svelte": "^0.6.0",
        "rollup-plugin-json": "^4.0.0",
        "svelte-bulma-components": "^0.1.5"
    },
    "devDependencies": {
        "babel-eslint": "^10.0.1",
        "healthier": "^2.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.18.2",
        "rollup": "^1.10.1",
        "rollup-plugin-commonjs": "^9.3.4",
        "rollup-plugin-livereload": "^1.0.0",
        "rollup-plugin-node-resolve": "^4.2.3",
        "rollup-plugin-svelte": "^5.0.3",
        "rollup-plugin-terser": "^4.0.4",
        "sirv-cli": "^0.4.0",
        "svelte": "^3.0.0"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    }
}
